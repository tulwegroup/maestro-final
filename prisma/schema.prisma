// MAESTRO - UAE Life Automation Platform
// Prisma Schema for ISO 27001 & PCI DSS Compliant Database
// All data is designed for UAE data residency compliance

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ===========================
// USER & AUTHENTICATION
// ===========================

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  role          UserRole       @default(USER)
  passwordHash  String?        // For admin accounts only
  isActive      Boolean        @default(true)
  lastLoginAt   DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Relations
  profile       UserProfile?
  sessions      Session[]
  accounts      Account[]
  auditLogs     AuditLog[]
  journeys      Journey[]
  
  @@index([email])
  @@index([role])
}

// NextAuth.js Account model for OAuth providers
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth.js VerificationToken for email verification
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([userId])
}

enum UserRole {
  ADMIN
  USER
  OPERATOR
}

// ===========================
// USER PROFILE & KYC
// ===========================

model UserProfile {
  id                  String           @id @default(cuid())
  userId              String           @unique
  emiratesId          String?          // Encrypted at rest
  emiratesIdHash      String?          // Hashed for lookup
  fullNameArabic      String?
  fullNameEnglish     String?
  mobile              String?
  mobileVerified      Boolean          @default(false)
  nationality         String?
  dateOfBirth         DateTime?
  
  // Visa Information
  visaExpiry          DateTime?
  visaType            String?
  sponsorName         String?
  
  // License Information
  licenseNumber       String?
  licenseExpiry       DateTime?
  licenseType         String?
  
  // Vehicle Information
  vehiclePlate        String?
  vehicleExpiry       DateTime?
  vehicleMake         String?
  vehicleModel        String?
  
  // Account Status
  lifeScore           Int              @default(88)
  uaePassConnected    Boolean          @default(false)
  uaePassConnectedAt  DateTime?
  permissionsGranted  String           @default("") // Comma-separated: vehicle,visa,bills,courts
  
  // Wallet
  walletBalance       Float            @default(0)
  walletCurrency      String           @default("AED")
  
  // AANI Integration
  aaniLinked          Boolean          @default(false)
  aaniAccountNumber   String?
  aaniLinkedAt        DateTime?
  
  // Crypto Vault
  btcBalance          Float            @default(0)
  usdtTrc20Balance    Float            @default(0)
  usdtErc20Balance    Float            @default(0)
  usdcSolBalance      Float            @default(0)
  usdcPolygonBalance  Float            @default(0)
  
  // Subscription
  subscriptionTier    String           @default("free") // free, basic, premium, enterprise
  subscriptionExpiry  DateTime?
  
  // Timestamps
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt
  
  user                User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([emiratesIdHash])
  @@index([mobile])
}

// ===========================
// JOURNEYS & TASKS
// ===========================

model Journey {
  id                String        @id @default(cuid())
  userId            String
  journeyType       JourneyType
  title             String
  description       String?
  
  // Status
  status            JourneyStatus @default(PENDING)
  paymentStatus     PaymentStatus @default(UNPAID)
  
  // Amounts
  totalAmount       Float         @default(0)
  currency          String        @default("AED")
  
  // Payment Details
  paymentMethod     String?
  paymentReference  String?
  paymentDate       DateTime?
  
  // Processing
  startedAt         DateTime?
  completedAt       DateTime?
  
  // Assignment (for operators)
  assignedTo        String?       // Operator user ID
  operatorNotes     String?
  
  // Timestamps
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relations
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks             Task[]
  
  @@index([userId])
  @@index([status])
  @@index([journeyType])
}

model Task {
  id              String      @id @default(cuid())
  journeyId       String
  entity          Entity
  taskType        String
  title           String
  description     String?
  
  // Status
  status          TaskStatus  @default(PENDING)
  priority        Int         @default(1)
  blockingTask    Boolean     @default(false)
  
  // Amount
  amount          Float       @default(0)
  currency        String      @default("AED")
  feeAmount       Float       @default(0)
  
  // Processing
  startedAt       DateTime?
  completedAt     DateTime?
  
  // External References
  externalRef     String?     // Reference from external system
  externalData    String?     // JSON data from external system
  
  // Metadata (flexible JSON stored as string)
  metadata        String?
  
  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  // Relations
  journey         Journey     @relation(fields: [journeyId], references: [id], onDelete: Cascade)
  
  @@index([journeyId])
  @@index([status])
  @@index([entity])
}

enum JourneyType {
  LICENSE_RENEWAL
  VISA_RENEWAL
  VEHICLE_REGISTRATION
  MONTHLY_BILLS
  EMIRATES_ID_RENEWAL
  HOME_SERVICES
  COMPLETE_CHECKUP
  TRAVEL_BAN_CHECK
  CUSTOM
}

enum JourneyStatus {
  PENDING
  PAYMENT_PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum PaymentStatus {
  UNPAID
  PAID
  REFUNDED
  FAILED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  BLOCKED
}

enum Entity {
  RTA
  DUBAI_POLICE
  ICP
  AADC
  SHARJAH_POLICE
  DEWA
  EJARI
  EMIRATES_ID
  SALIK
  DU
  ETISALAT
  TASJEEL
  DUBAI_COURTS
  ABU_DHABI_COURTS
  FEDERAL_COURTS
  CUSTOM
}

// ===========================
// TRANSACTIONS & PAYMENTS
// ===========================

model Transaction {
  id              String            @id @default(cuid())
  userId          String
  type            TransactionType
  amount          Float
  currency        String            @default("AED")
  feeAmount       Float             @default(0)
  
  // Payment Method
  paymentMethod   PaymentMethod
  paymentProvider String?
  paymentReference String?
  
  // Status
  status          TransactionStatus @default(PENDING)
  
  // Related entities
  journeyId       String?
  taskId          String?
  
  // Metadata
  description     String?
  metadata        String?           // JSON
  
  // Timestamps
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  
  @@index([userId])
  @@index([type])
  @@index([status])
}

enum TransactionType {
  WALLET_TOP_UP
  WALLET_DEDUCTION
  JOURNEY_PAYMENT
  TASK_PAYMENT
  CRYPTO_DEPOSIT
  CRYPTO_WITHDRAWAL
  CRYPTO_TO_WALLET
  REFUND
  FEE
}

enum PaymentMethod {
  MAESTRO_WALLET
  AANI
  CARD
  APPLE_PAY
  GOOGLE_PAY
  BTC
  USDT_TRC20
  USDT_ERC20
  USDC_SOL
  USDC_POLYGON
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

// ===========================
// INTEGRATIONS & API LOGS
// ===========================

model IntegrationLog {
  id              String      @id @default(cuid())
  serviceName     String
  endpoint        String
  method          String
  requestPayload  String?
  responsePayload String?
  statusCode      Int?
  durationMs      Int?
  status          LogStatus
  errorMessage    String?
  createdAt       DateTime    @default(now())
  
  @@index([serviceName])
  @@index([createdAt])
}

enum LogStatus {
  SUCCESS
  FAILURE
  TIMEOUT
}

// ===========================
// AUDIT LOGS (ISO 27001)
// ===========================

model AuditLog {
  id          String      @id @default(cuid())
  userId      String?
  action      String
  resource    String
  resourceId  String?
  oldValue    String?
  newValue    String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime    @default(now())
  
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// ===========================
// NOTIFICATIONS
// ===========================

model Notification {
  id          String              @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String
  data        String?             // JSON
  isRead      Boolean             @default(false)
  readAt      DateTime?
  sentVia     String              @default("in_app") // in_app, email, sms
  createdAt   DateTime            @default(now())
  
  @@index([userId])
  @@index([isRead])
}

enum NotificationType {
  JOURNEY_CREATED
  JOURNEY_COMPLETED
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  DOCUMENT_EXPIRING
  FINE_DETECTED
  TRAVEL_BAN_ALERT
  WALLET_TOP_UP
  SYSTEM_ALERT
}

// ===========================
// SECURITY & COMPLIANCE
// ===========================

model SecurityEvent {
  id              String            @id @default(cuid())
  eventType       SecurityEventType
  userId          String?
  ipAddress       String?
  userAgent       String?
  resource        String?
  details         String?
  severity        SecuritySeverity
  resolvedAt      DateTime?
  resolvedBy      String?
  createdAt       DateTime          @default(now())
  
  @@index([eventType])
  @@index([severity])
  @@index([createdAt])
}

enum SecurityEventType {
  LOGIN_SUCCESS
  LOGIN_FAILURE
  LOGOUT
  PASSWORD_CHANGE
  MFA_ENABLED
  MFA_DISABLED
  SUSPICIOUS_ACTIVITY
  RATE_LIMIT_EXCEEDED
  API_KEY_USED
  ENCRYPTION_KEY_ROTATION
  DATA_EXPORT
  PERMISSION_CHANGE
}

enum SecuritySeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// ===========================
// CONFIGURATION
// ===========================

model SystemConfig {
  id          String    @id @default(cuid())
  key         String    @unique
  value       String
  encrypted   Boolean   @default(false)
  description String?
  updatedAt   DateTime  @updatedAt
  updatedBy   String?
  
  @@index([key])
}
